<div class="row">
   <div>
      <h1>{{articles.title}}</h1>
      <ul>
         <h3>Current Comments</h3>
         <li>
            Comments: {{articles.note.title}}
            {{articles.note.body}}
         </li>
      </ul>
   </div>
</div>
<div class="row">
   <form method="POST" action="/articles/{{articles.id}}">
      <div class="form-group">
         <label for="title">Comment Title:</label>
            <input type="text" class="form-control" id="title" required="true" name="title">
      </div>
      <div class="form-group">
         <label for="body">Comment:</label>
            <input type="text" class="form-control" id="body" required="true" name="body">
      </div>
      <div class="modal-footer">

            <button type="submit" class="btn btn-default" data-dismiss="modal">Add Note</button>
      </div>
   </form>
</div>
   